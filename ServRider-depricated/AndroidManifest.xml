<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.serv.servrider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.CALL_PHONE"/><uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><uses-permission android:name="android.permission.READ_CONTACTS"/>
    
    <application
        android:name="uk.org.serv.servrider.ServApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_serv">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ServActivity"
            android:label="@string/title_activity_serv">
        </activity>
        
        <activity
            android:name=".NewJobActivity"
            android:label="@string/title_activity_job">
        </activity>
        
        <activity
            android:name=".OnRouteToPickupActivity"
            android:label="@string/title_activity_onroute">
        </activity>
        
        <activity
            android:name=".OnRouteToDropActivity"
            android:label="@string/title_activity_onroutetodrop">
        </activity>
        
        <activity
            android:name=".OnRouteHomeActivity"
            android:label="@string/title_activity_onroutehome">
        </activity>
        
        <activity
            android:name=".ViewLogActivity"
            android:label="@string/title_activity_serv">
        </activity>
        
        <activity
            android:name="SettingsActivity"
            android:label="@string/title_activity_serv">
        </activity>
        
    </application>

</manifest>